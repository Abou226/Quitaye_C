<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:viewmodels="clr-namespace:Quitaye.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quitaye.Views.SocialLoginPage" >
    <ContentPage.Content>
        <StackLayout    Padding="20"
                        VerticalOptions="CenterAndExpand" 
                        x:Name="mainLayout"
                        BindableLayout.ItemsSource="{Binding AuthenticationNetworks}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Name, StringFormat='Login with {0}'}"
                            ImageSource="{Binding Icon}"
                            Command="{Binding Path=BindingContext.OnLoginCommand, Source={x:Reference mainLayout}}"
                            CommandParameter="{Binding .}"     
                            HeightRequest="45"
                            TextColor="{Binding Foreground}"
                            BackgroundColor="{Binding Background}"
                            WidthRequest="280"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="FillAndExpand"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>